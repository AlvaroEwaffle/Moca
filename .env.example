# ========================================
# Tiare - Healthcare Practice Management
# Environment Configuration Example
# ========================================

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3000
HOST=localhost
CORS_ORIGIN=http://localhost:5173

# ========================================
# DATABASE CONFIGURATION
# ========================================
MONGODB_URI=mongodb://localhost:27017/tiare
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/tiare

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-key-here
BCRYPT_ROUNDS=12

# ========================================
# GOOGLE CALENDAR INTEGRATION
# ========================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key

# ========================================
# WHATSAPP CLOUD API (for Tiare agent)
# ========================================
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token
WHATSAPP_WEBHOOK_URL=https://your-domain.com/api/webhooks/whatsapp

# ========================================
# PAYMENT PROCESSING (MercadoPago)
# ========================================
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key
MERCADOPAGO_WEBHOOK_URL=https://your-domain.com/api/webhooks/mercadopago

# ========================================
# EMAIL & NOTIFICATIONS
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@tiare.com
EMAIL_FROM_NAME=Tiare Healthcare

# ========================================
# SLACK INTEGRATION (Optional)
# ========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#tiare-notifications

# ========================================
# FILE STORAGE (for invoices, documents)
# ========================================
# Option 1: Local storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Option 2: AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=tiare-documents
AWS_S3_BUCKET_URL=https://your-bucket.s3.amazonaws.com

# ========================================
# REDIS (for caching and sessions)
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# ========================================
# LOGGING & MONITORING
# ========================================
LOG_LEVEL=info
LOG_FILE=./logs/tiare.log
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_WHATSAPP=true
ENABLE_GOOGLE_CALENDAR=true
ENABLE_AUTOMATIC_REMINDERS=true
ENABLE_BILLING_AUTOMATION=true
ENABLE_PATIENT_PORTAL=false

# ========================================
# BUSINESS LOGIC CONFIGURATION
# ========================================
DEFAULT_APPOINTMENT_DURATION=60
MAX_APPOINTMENTS_PER_DAY=8
REMINDER_24H_BEFORE=true
REMINDER_2H_BEFORE=true
CANCELLATION_POLICY_HOURS=24
BILLING_CYCLE=daily # daily, weekly, monthly

# ========================================
# DEVELOPMENT & TESTING
# ========================================
SEED_DATABASE=false
ENABLE_MOCK_DATA=false
ENABLE_API_DOCS=true
API_DOCS_PATH=/api-docs

# ========================================
# PRODUCTION OVERRIDES
# ========================================
# Uncomment and modify for production
# NODE_ENV=production
# HOST=0.0.0.0
# CORS_ORIGIN=https://your-domain.com
# GOOGLE_REDIRECT_URI=https://your-domain.com/api/auth/google/callback
# WHATSAPP_WEBHOOK_URL=https://your-domain.com/api/webhooks/whatsapp
# MERCADOPAGO_WEBHOOK_URL=https://your-domain.com/api/webhooks/mercadopago

# ========================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# ========================================
# Create separate .env.development, .env.production, .env.test files
# for environment-specific configurations

# ========================================
# NOTES & INSTRUCTIONS
# ========================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env files to version control
# 3. Use strong, unique secrets for production
# 4. Regularly rotate API keys and secrets
# 5. Use environment-specific .env files for different deployments
# 6. Validate all required fields are set before starting the application
